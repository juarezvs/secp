generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String   @id @default(cuid())
  name      String?
  email     String?  @unique
  emailVerified DateTime?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts  Account[]
  sessions  Session[]
   Authenticator Authenticator[]

  // vínculo com domínio SECP
  profile   UserProfile?

  
}

model UserProfile {
  id        String @id @default(cuid())
  userId    String @unique
  user      User   @relation(fields: [userId], references: [id])

  // onboarding / localidade
  isOnboarded Boolean @default(false)
  sarhUf      String?
  matricula   String?

  // multiempresa (pode ser 1..n via tabela de memberships, aqui simples)
  companyId  String?
  branchId   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id])

    createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([userId, credentialID])
}


model Company {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  branches  Branch[]
  employees Employee[]
}

model Branch {
  id         String   @id @default(cuid())
  companyId  String
  code       String
  name       String
  timezone   String   // ex: "America/Manaus"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  company    Company  @relation(fields: [companyId], references: [id])
  clocks     Clock[]
  employees  Employee[]

  @@unique([companyId, code])
}

model Employee {
  id          String   @id @default(cuid())
  companyId   String
  branchId    String
  email       String   @unique
  name        String
  matricula   String?  // matrícula no SARH/SER
  sarhUf      String?  // ex: "AM", "RR" (define o Oracle)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  company     Company  @relation(fields: [companyId], references: [id])
  branch      Branch   @relation(fields: [branchId], references: [id])
}

model Clock {
  id         String   @id @default(cuid())
  branchId   String
  serial     String
  model      String
  ip         String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  branch     Branch   @relation(fields: [branchId], references: [id])

  @@unique([branchId, serial])
}

enum ClockEventSource {
  CLOCK     // veio do relógio REP/AFD
  SECP      // batida feita no SECP (web/mobile)
}

enum ManualAdjustmentType {
  ADD       // adicionar marcação
  UPDATE    // alterar marcação existente
  REMOVE    // remover marcação
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELED
}

enum OvertimeEntryType {
  CREDIT    // crédito no banco de horas
  DEBIT     // débito/compensação
  ADJUST    // ajustes administrativos
}


//Para auditoria e rastreabilidade. O cálculo e normalização sempre usam occurredAtUtc
model ClockEventRaw {
  id              String          @id @default(cuid())

  companyId        String
  branchId         String
  employeeId       String
  clockId          String?

  source           ClockEventSource
  sourceRef        String?         // ex.: NSR do AFD, ou requestId da app
  idempotencyKey   String          @unique

  occurredAtUtc    DateTime
  occurredAtLocal  DateTime
  timezone         String          // ex.: "America/Manaus"

  payload          Json?           // guarda detalhes do AFD/REP

  createdAt        DateTime        @default(now())

  @@index([employeeId, occurredAtUtc])
  @@index([companyId, branchId, occurredAtUtc])
}

model ManualAdjustment {
  id              String                @id @default(cuid())

  companyId        String
  branchId         String
  employeeId       String

  // data de referência do ajuste (dia local)
  workDateLocal    DateTime              // usar 00:00 local do dia, como âncora

  type            ManualAdjustmentType
  reason          String

  // altera uma marcação existente (UPDATE/REMOVE) ou cria uma nova (ADD)
  targetEventId   String?                // ClockEventRaw.id (quando UPDATE/REMOVE)
  newOccurredAtUtc   DateTime?
  newOccurredAtLocal DateTime?
  newTimezone        String?

  status          ApprovalStatus         @default(PENDING)

  requestedByUserId String
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt

  approvals        Approval[]

  @@index([employeeId, workDateLocal])
  @@index([status])
}

model Approval {
  id               String         @id @default(cuid())
  adjustmentId     String
  adjustment       ManualAdjustment @relation(fields: [adjustmentId], references: [id])

  status           ApprovalStatus // APPROVED/REJECTED
  decisionReason   String?
  decidedByUserId  String
  decidedAt        DateTime       @default(now())

  @@index([adjustmentId])
}

model OvertimeBankEntry {
  id            String            @id @default(cuid())

  companyId      String
  branchId       String
  employeeId     String

  // data base local (competência/controle)
  workDateLocal  DateTime
  minutes        Int              // + crédito, - débito
  type           OvertimeEntryType
  reason         String

  // referência ao cálculo/ajuste/decisão
  referenceType  String?
  referenceId    String?

  createdAt      DateTime         @default(now())

  @@index([employeeId, workDateLocal])
}


